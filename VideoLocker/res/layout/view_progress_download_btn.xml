<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/course_row_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/x_small_icon_margin"
    android:layout_marginRight="@dimen/x_small_icon_margin"
    android:layout_marginEnd="@dimen/x_small_icon_margin"
    tools:targetApi="17" >

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="@dimen/fa_xx_large"
        android:layout_height="@dimen/fa_xx_large"
        android:layout_gravity="center"
        android:src="@drawable/ic_downarrow"
        tools:ignore="ContentDescription" />

    <include layout="@layout/view_progress_wheel" />

</FrameLayout>